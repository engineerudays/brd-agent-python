# BRD Agent Python - Environment Configuration
# Copy this file to .env and fill in your values

# === Anthropic API ===
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# === Model Configuration ===
# Options: claude-3-haiku-20240307, claude-3-5-sonnet-20241022, claude-3-opus-20240229
LLM_MODEL=claude-3-haiku-20240307
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# === API Configuration ===
API_HOST=0.0.0.0
API_PORT=8000

# === Logging ===
LOG_LEVEL=INFO

# === RAG Configuration ===
# ChromaDB vector store path (relative to project root)
CHROMADB_PATH=./.chromadb

# Ollama embedding service configuration
# Make sure Ollama is running locally with nomic-embed-text model
OLLAMA_EMBEDDING_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# RAG feature flag (set to true to enable RAG)
RAG_ENABLED=false

# Default GitHub repository URL for testing/development
# Can be overridden per request via API/CLI
DEFAULT_REPO_URL=https://github.com/paperless-ngx/paperless-ngx

# RAG retrieval parameters
RAG_TOP_K=5
RAG_QUERY_COUNT=3

